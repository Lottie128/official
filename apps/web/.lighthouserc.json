{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "url": [
        "http://127.0.0.1:4173/"
      ],
      "startServerCommand": "bun run perf:serve",
      "startServerReadyPattern": "127.0.0.1:4173",
      "settings": {
        "preset": "desktop",
        "disableStorageReset": false,
        "screenEmulation": {
          "mobile": false,
          "width": 1350,
          "height": 940,
          "deviceScaleFactor": 1,
          "disabled": false
        },
        "formFactor": "desktop",
        "throttlingMethod": "simulate"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "warn",
          {
            "minScore": 0.85
          }
        ]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
